<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsActivity"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/backgroundColor"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/titleD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textColor="@android:color/black"

            android:textSize="24sp"
            android:textStyle="bold" />
    <TextView
        android:id="@+id/yearD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text=""
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />

        <TextView
            android:id="@+id/releasedD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@android:color/black"
            android:textSize="16dp" />
    <TextView
        android:id="@+id/runtimeD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/genreD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/directorD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/writerD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/actorsD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/plotD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/languageD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/countryD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/awardsD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/imdbRatingD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/imdbVotesD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/typeD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />

    </LinearLayout>
</ScrollView>
